    "version": "2.0.0",
    "tasks": [
        {
            "label": "make",
            "type": "shell",
            "command": "cd ${workspaceFolder}/Builds/LinuxMakefile && make -j 4",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "makeRelease",
            "type": "shell",
            "command": "cd ${workspaceFolder}/Builds/LinuxMakefile && make CONFIG=Release -j 4",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }

    ]
}